<!--pages/map/alumni/alumni.wxml-->
<view class="container other-bg">
  <view class="search-box other-bg">
    <view class="input-box">
      <image src="/images/icon-search.png" class="icon-search" />
      <text>请输入关键词</text>
      <input hidden class="my-input" />
    </view>
  </view>
  <view style="height:110rpx"></view>
  <view class="nav-wrapper flex-box">
    <text class="active-pedding">全部</text>
    <navigator class="empty-text" url="/pages/map/alumni/mine" hover-class="none">我的校友会</navigator>
    <picker>
      <view class="empty-box">
        <image src="/images/icon-menu-g.png" class="icon-menu" />
        <text>筛选</text>
      </view>
     </picker>
  </view>
  <view class="item-list" wx:for="{{3}}">
    <view class="item">
      <view class="img-box">
        <image src="/images/avatar.jpg" class="avatar" />
      </view>
      <view class="right-content">
          <view class="flex-box">
            <text>类型：年级</text>
            <image src="/images/icon-collect-default.png" class="icon-collect" />
          </view>
          <view>能动学院校友会</view>
          <view>创建时间：2018-01-01 15:01</view>
          <view>320人觉得</view>
      </view>
    </view>
  </view>
  <navigator hover-class="none" url="/pages/map/alumni/action" class="img-btn">  
    <image src="/images/icon-action.png" class="icon-action" />
  </navigator>
</view>