/* pages/activity/index/index.wxss */

/*图片尺寸*/
.icon-search-g ,
.icon-menu-g{
  width:30rpx;
  height:26rpx;
  margin-right:5rpx;
}
.act-list-img{
  width:200rpx;
  height:200rpx;
}

.icon-search{
  width:31rpx;
  height:30rpx;
  margin-right:10rpx;
}
.icon-action{
  width:122rpx;
  height:121rpx;
}
.icon-radius{
  width:226rpx;
  height:68rpx;
}
.icon-close{
  /* position: absolute; */
  right:20rpx !important;
  top:5rpx !important;
  width:25rpx;
  height:25rpx;
}
/*定义title状态*/
.act-top-title{
  display: inline-block;
  width:124rpx;
  height:40rpx;
  color: #fff;
  text-align: center;
  line-height:40rpx;
  border-radius: 4rpx;
}
.friend{
  background-color: #FABC50;
}
.school{
  background-color: #8FCD52;
}
.college{
  background-color: #FF8888;
}
.classify{
  background-color: #9487FB;
}
.container{
  height:100%;
}
.act-ing{
  color: #0E90F5;
}
.act-end{
  color: #999999;
}
.act-empty{
  color: #00978b;
}

/*header*/
.act-wrapper-header{
  position: fixed;
  top:0;
  left:0;
  justify-content: space-between;
}
.act-wrapper-nav{
  font-size: 24rpx;
  border-radius: 22rpx;
}

/*活动--搜索*/
.search-box{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background-color: rgba(0,0,0,.4);
  z-index:1000 !important;
}

.search-box .input-box{
  display: flex;
  align-items: center;
  justify-content: center;
  width:670rpx;
  height:68rpx;
  margin:0 auto;
  margin-top:20rpx;
  font-size: 24rpx;
  line-height:68rpx;
  text-align: center;
  border-radius: 4rpx;
  background-color: #fff;
}
.search-box .my-input{
  width:100%;
  height:68rpx;
  padding:0 10rpx;
  text-align: left;
}
.search-box .search-btn{
  color: #999;
  font-size: 24rpx;
}

.action-box{  
  position: fixed;
  right:0rpx;
  bottom:60rpx;
}
.action-box .action-title{
  position: relative;
  top:0;
  right:20rpx;
}
.action-box .action-title text{
  position: absolute;
  top:0;
  right:50rpx;
  display: inline-block;
  width:150rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 1000 !important;
}
.action-box .action-title image{
  position: absolute;
  top:-20rpx;
  right:0;
}