/* pages/account/contact/contact.wxss */
.contact-wrapper{
  display: flex;
  width: 100%;
  margin-bottom: 14rpx;
  padding: 30rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}
.contact-wrapper>image{
  flex: none;
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}
.contact-content{
  flex: auto;
}
.contact-title{
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
radio-group{
  font-size: 28rpx;
  color: #666;
}
radio-group label{
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
radio-group label text{
  margin-left: 10rpx;
}
textarea{
  width: 100%;
  height: 254rpx;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  background: #f5fffe;
  border: 1px solid #00998d;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.tips{
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}
.tips text{
  color: #ff4747;
}
.image{
  width: 120rpx;
  height: 120rpx;
}
.image-wrapper>view{
  display: inline-block;
  margin: 10rpx 20rpx 0 0; 
}
.image-group{
  position: relative;
}
.delete{
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  z-index: 999;
  width: 24rpx;
  height: 24rpx;
}

.input-wrapper{
  width: 100%;
  margin-bottom: 26rpx;
  padding: 0 55rpx 0 23rpx;
  background: #f5fffe;
  border: 1px solid #00998d;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.input-group{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #eee;
}
.input-group:last-child{
  border-bottom: 0;
}
.input-group .label{
  flex: none;
  width: 120rpx;
  margin-right: 25rpx;
  color: #666;
}
.input-group input{
  flex: auto;
}
.contact-wrapper>button{
  width: 670rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #fff;
  background: #00998d;
  border-radius: 4rpx;
}
.contact-wrapper:last-child{
  margin: 0;
  padding: 48rpx 0 54rpx 0;
}