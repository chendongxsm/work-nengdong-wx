<!--pages/other/help/publish.wxml-->
<view class="container other-bg">
    <view class="act-card">
      <view class="card-list-item">
        <text class="item-title">类型</text>
        <picker>
          <view class="picker">
            <text class="picker-title">寻求帮助</text>
            <image src='/images/icon-arrow-right.png' class="icon-arrow-right" />
          </view>
        </picker>
      </view>
      <view class="card-list-item">
        <text class="item-title">标题</text>
        <input placeholder="请输入标题" class="item-input" />
      </view>
      <view class="card-list-item align-top">
        <text class="item-title">内容</text>
        <textarea placeholder="请输入内容" class="item-input item-textarea" />
      </view> 
      <view class="card-list-item align-top">
        <text class="item-title">图片</text>
        <view class="img-list">
          <view class="img-item-box">
            <image src="/images/icon-delete.png" class="icon-delete" />
            <image src="/images/upload.png" class="icon-upload" />
          </view>
        </view>
      </view>           
    </view>
    <view class="act-card">
      <view class="card-list-item">
        <text class="item-title">联系人</text>
        <view class="picker-title">张晓晓</view>
      </view>
      <view class="card-list-item">
        <text class="item-title">手机号</text>
        <view class="flex-box">
          <text class="picker-title">13123233232</text>
          <image src="/images/icon-check-default.png" class="icon-check" />
        </view>
      </view>   
      <view class="card-list-item">
        <text class="item-title">邮箱</text>
        <view class="flex-box">
          <text class="picker-title">13123233232@qq.com</text>
          <image src="/images/icon-check-default.png" class="icon-check" />
        </view>
      </view>  
      <view class="card-list-item">
        <text class="item-title">QQ</text>
        <view class="flex-box">
          <text class="picker-title">13123233232</text>
          <image src="/images/icon-check-default.png" class="icon-check" />
        </view>
      </view> 
      <view class="card-list-item">
        <text class="item-title">微信</text>
        <view class="flex-box">
          <text class="picker-title">13123233232</text>
          <image src="/images/icon-check-default.png" class="icon-check" />
        </view>
      </view>                               
    </view>   
    <view class="form-msg">联系方式对管理员全部可见, 勾选项对全部用户可见, 至少勾选一项。</view> 
    <view class="btn-area">提交</view>
    <view class="dialog-wrapper">
      <block wx:if="{{false}}">
        <view class="dialog">
          <image src="/images/publish-unpass.png" class="publish" />
          <view class="text">提交失败</view>
          <view class="tips">请核对您的信息</view>
          <view class="tips">重新提交</view>
          <view class="dialog-btn-wrapper">
            <text class="btn btn-gray">取消</text>
            <text class="btn btn-blue">查看</text>
          </view>
        </view>
      </block>
      <block>
        <view class="dialog">
          <image src="/images/publish-pass.png" class="publish" />
          <view class="text">提交成功</view>
          <view class="tips">请在 "我的校友会板块"</view>
          <view class="tips">查看审核进度</view>
          <view class="dialog-btn-wrapper">
            <text class="btn btn-gray">取消</text>
            <text class="btn btn-blue">查看</text>
          </view>
        </view>
      </block>
    </view>
</view>